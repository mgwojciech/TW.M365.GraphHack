<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Name="this"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:GraphViews="clr-namespace:TW.M365.GraphHack.Views"
             x:Class="TW.M365.GraphHack.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            x:Name="Container"
            VerticalOptions="Center">
            <GraphViews:PersonView x:Name="UserView" BindingContext="{x:Reference this}" PeopleService="{Binding PeopleService}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
